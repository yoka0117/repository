<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
 namespace：必须有值，自定义的唯一字符串
 推荐使用：dao 接口的全限定名称
-->
<mapper namespace="com.huzi.dao.WarehouseRegionIdDao">
    <!--
    <select>: 查询数据， 标签中必须是 select 语句
    id: sql 语句的自定义名称，推荐使用 dao 接口中方法名称，
    使用名称表示要执行的 sql 语句
    resultType: 查询语句的返回结果数据类型，使用全限定类名
    -->
<resultMap id="warehouseRegionIdMap" type="com.huzi.domain.Warehouse.WarehouseRegionId">
    <id column="region_id" property="regionId"></id>
    <id column="shop_id" property="shopId"></id>
    <result column="warehouse_id" property="warehouseId"></result>
</resultMap>


    <!--//1添加Goods商品***-->

    <select id="selectWarehouseRegionId" parameterType="com.huzi.domain.Warehouse.WarehouseRegionId" resultMap="warehouseRegionIdMap">
        select region_id,shop_id,warehouse_id from t_region_warehouse_id_mapper
        where region_id = #{regionId} and shop_id = #{shopId}
    </select>
</mapper>